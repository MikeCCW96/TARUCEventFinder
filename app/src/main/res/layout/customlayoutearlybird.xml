<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:paddingLeft="13dp"
        android:id="@+id/tvEventTitle2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="20dp"
        android:text="txtEventTitle"
        android:textColor="@color/colorPrimary"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:paddingLeft="13dp"
        android:id="@+id/tvStartDate2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="20dp"
        android:text="startDate"
        android:layout_below="@id/tvEventTitle2"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/tvEndDate2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="13dp"
        android:text="endDate"
        android:textSize="20dp"
        android:layout_alignBaseline="@+id/tvStartDate2"
        android:layout_alignBottom="@+id/tvStartDate2"
        android:layout_toEndOf="@+id/textViewId2"
        android:layout_marginStart="180dp" />

    <TextView
        android:paddingLeft="13dp"
        android:id="@+id/tvStartTime2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:text="startTime"
        android:textSize="15dp"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/tvStartDate2"
        android:layout_alignParentStart="true"
        android:paddingBottom="15dp"/>

    <TextView
        android:id="@+id/tvEndTime2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:paddingLeft="13dp"
        android:text="endTime"
        android:textSize="15dp"
        android:layout_alignBaseline="@+id/tvStartTime2"
        android:layout_alignBottom="@+id/tvStartTime2"
        android:layout_alignStart="@+id/tvEndDate2" />

    <TextView
        android:id="@+id/tvRedeemStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingBottom="15dp"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:text="tvRedeemStatus"
        android:textSize="15dp"
        android:layout_below="@id/tvStartTime2"
        />

</RelativeLayout>