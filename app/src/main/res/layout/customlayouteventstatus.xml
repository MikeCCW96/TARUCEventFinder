<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:paddingLeft="13dp"
        android:id="@+id/textViewEventTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="20dp"
        android:text="txtEventTitle"
        android:textColor="@color/colorPrimary"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:paddingLeft="13dp"
        android:id="@+id/textViewStartDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="20dp"
        android:text="startDate"
        android:layout_below="@id/textViewEventTitle"
        android:textColor="@color/colorPrimary"
 />

    <TextView
        android:id="@+id/textViewEndDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="13dp"
        android:text="endDate"
        android:textSize="20dp"
        android:layout_alignBaseline="@+id/textViewStartDate"
        android:layout_alignBottom="@+id/textViewStartDate"
        android:layout_toEndOf="@+id/textViewId"
        android:layout_marginStart="180dp" />

    <TextView
        android:paddingLeft="13dp"
        android:id="@+id/textViewStartTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:text="startTime"
        android:textSize="15dp"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/textViewStartDate"
        android:layout_alignParentStart="true"
        android:paddingBottom="15dp"/>




    <TextView
        android:id="@+id/textViewEndTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:paddingLeft="13dp"
        android:text="endTime"
        android:textSize="15dp"
        android:layout_alignBaseline="@+id/textViewStartTime"
        android:layout_alignBottom="@+id/textViewStartTime"
        android:layout_alignStart="@+id/textViewEndDate" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingBottom="15dp"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:text="Registration Status"
        android:textSize="15dp"
        android:layout_below="@id/textViewStartTime"
 />

    <TextView
        android:id="@+id/textViewRegistrationStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingBottom="15dp"
        android:paddingRight="13dp"
        android:text="txtRegistrationStatus"
        android:textSize="15dp"
        android:layout_toRightOf="@id/textView11"
        android:layout_below="@id/textViewStartTime"
        />


</RelativeLayout>