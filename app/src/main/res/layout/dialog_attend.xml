<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@drawable/dialogcorner">

    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textSize="20dp"
        android:text="TextView"
        android:textAlignment="center"
        android:layout_marginTop="15dp" />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:layout_marginLeft="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btnConfirm"
        android:layout_marginBottom="21dp"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="14dp"
        android:background="@drawable/buttonred"
        />

    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:text="Confirm"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/person5"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button"/>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:dropDownWidth="70dp"
        android:textAlignment="center"
        android:entries="@array/numbers"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number of person"
        android:textSize="20dp"
        android:layout_below="@+id/dialogTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <EditText
        android:background="@drawable/edittextbar"
        android:id="@+id/person5"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"

        android:layout_marginBottom="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Student ID"
        android:layout_below="@+id/person4"
        android:layout_alignStart="@+id/person4"
        android:visibility="invisible"/>

    <EditText
        android:background="@drawable/edittextbar"
        android:id="@+id/person4"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginBottom="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/person3"
        android:layout_below="@+id/person3"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Student ID"
        android:visibility="invisible"/>

    <EditText
        android:background="@drawable/edittextbar"
        android:id="@+id/person3"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginBottom="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/person2"
        android:layout_below="@+id/person2"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Student ID"
        android:visibility="invisible"/>

    <EditText
        android:background="@drawable/edittextbar"
        android:id="@+id/person2"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginBottom="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/person1"
        android:layout_below="@+id/person1"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Student ID"
        android:visibility="invisible"

        />

    <EditText
        android:background="@drawable/edittextbar"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginBottom="4dp"
        android:id="@+id/person1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:text="161WMR10777"
        android:inputType="textPersonName"
        android:visibility="visible" />


</RelativeLayout>