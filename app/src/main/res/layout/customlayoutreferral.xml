<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:paddingLeft="13dp"
        android:id="@+id/tvEventTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="20dp"
        android:text="txtEventTitle"
        android:textColor="@color/colorPrimary"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:paddingLeft="13dp"
        android:id="@+id/tvStartDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="20dp"
        android:text="startDate"
        android:layout_below="@id/tvEventTitle"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/tvEndDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="13dp"
        android:text="endDate"
        android:textSize="20dp"
        android:layout_alignBaseline="@+id/tvStartDate"
        android:layout_alignBottom="@+id/tvStartDate"
        android:layout_toEndOf="@+id/textViewId"
        android:layout_marginStart="180dp" />

    <TextView
        android:paddingLeft="13dp"
        android:id="@+id/tvStartTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:text="startTime"
        android:textSize="15dp"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/tvStartDate"
        android:layout_alignParentStart="true"
        android:paddingBottom="15dp"/>

    <TextView
        android:id="@+id/tvEndTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:paddingLeft="13dp"
        android:text="endTime"
        android:textSize="15dp"
        android:layout_alignBaseline="@+id/tvStartTime"
        android:layout_alignBottom="@+id/tvStartTime"
        android:layout_alignStart="@+id/tvEndDate" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingBottom="15dp"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:text="Student name:"
        android:textSize="15dp"
        android:layout_below="@id/tvStartTime"
        />

    <TextView
        android:id="@+id/tvReferral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingBottom="15dp"
        android:paddingRight="13dp"
        android:text="tvReferral"
        android:textSize="15dp"
        android:layout_toRightOf="@id/tv1"
        android:layout_below="@id/tvStartTime"
        />

</RelativeLayout>