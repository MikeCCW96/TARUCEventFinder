<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@drawable/dialogcorner">

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="20dp"
        android:text="txtEventName"/>

    <TextView
        android:id="@+id/TextView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_below="@id/txtTitle"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:text="Event Date"/>

    <TextView
        android:id="@+id/txtEventDateTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_below="@id/TextView1"

        android:textSize="20dp"
        android:text="txtEventDateTime"/>




    <TextView
        android:id="@+id/TextView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_below="@id/txtEventDateTime"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:text="Registered Date Time"/>

    <TextView
        android:id="@+id/txtRegisteredDateTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_below="@id/TextView2"
        android:layout_marginBottom="30dp"
        android:textSize="20dp"
        android:text="txtRegisteredDate"/>


</RelativeLayout>